<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <menu xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <Button
            android:id="@+id/mybutton"
            android:title=""
            app:showAsAction="always"
            android:icon="@drawable/common_google_signin_btn_text_light"
            />
    </menu>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Futbol Etkinliği"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:text="Halısahada futbol oynayacak birey aranıyor."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginTop="3dp"
                        android:textSize="15sp"
                        android:text="Lokasyon: Zort Halısaha"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="9sp"
                        android:layout_marginLeft="17dp"
                        android:backgroundTint="@color/black_dim"
                        android:text="Google Mapste Gör"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Tarih ve Saat: 21/11/2022 21:45"/>

                <TextView
                    android:id="@+id/number_of_people_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="... kişilik yer var."/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="İletişim: +905078869669"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/event_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:layout_alignParentRight="true"
            android:text="Top Sporu"/>

    </RelativeLayout>
</LinearLayout>
