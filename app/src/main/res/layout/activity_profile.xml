<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AD SOYAD"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <CheckBox
                    android:id="@+id/interest_tags_ball_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Top Sporları"
                    android:textSize="17sp" />

                <CheckBox
                    android:id="@+id/interest_tags_games_of_chance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Şans Oyunları(Okey vb.)"
                    android:textSize="17sp" />

                <CheckBox
                    android:id="@+id/interest_tags_discussion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tartışma"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:text="İletişim: +905078869669"
                            android:textSize="19sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/phone_number_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Telefon Numarası"
                                android:textSize="19sp" />

                            <Button
                                android:id="@+id/submitPhoneBTN"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="31dp"
                                android:padding="7dp"
                                android:text="Ekle"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:hint="Başlık"/>

                <EditText
                    android:id="@+id/description"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:hint="Etkinlik İle İlgili Ayrıntıları Giriniz"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Mekan İsmi Giriniz"
                        android:textSize="19sp" />

                    <Button
                        android:id="@+id/addLocationBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="31dp"
                        android:padding="7dp"
                        android:text="Lokasyon Ekle"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/submitDateBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarih ve Saat Ekle"/>
                    <TextView
                        android:id="@+id/dateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/number_of_people_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Kaç kişi aradığınızı giriniz:"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/number_of_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Sayı"
                        android:textSize="19sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/qc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:drawablePadding="16dp"
                    android:hint="Select Bin Type"
                    android:padding="12dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>